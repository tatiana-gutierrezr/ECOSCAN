        <!-- Primary color (Blanco para botones y elementos primarios) -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#E0E0E0</item> <!-- Una variante mÃ¡s oscura del blanco si es necesario -->
        <item name="colorOnPrimary">#000000</item> <!-- Texto sobre fondo blanco -->

        <!-- Secondary color -->
        <item name="colorSecondary">#70AB55</item>
        <item name="colorSecondaryVariant">#558B2F</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background and surface colors -->
